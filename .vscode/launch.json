    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "attach",
            "name": "Attach",
            "program": "${workspaceFolder}/target/debug/tab-o-txt.exe"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'tab-o-txt'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=tab-o-txt"
                ],
                "filter": {
                    "name": "tab-o-txt",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'tab-o-txt'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=tab-o-txt",
                    "--package=tab-o-txt",
                ],
                "filter": {
                    "name": "tab-o-txt",
                    "kind": "bin"
                }
            },
            "args": ["test8.txt"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'tab-o-txt'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=tab-o-txt",
                    "--package=tab-o-txt"
                ],
                "filter": {
                    "name": "tab-o-txt",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}